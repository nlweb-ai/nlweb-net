    private string GetScoreColor(float score)
    {
        return score switch
        {
            >= 0.8f => "#28a745", // Green
            >= 0.6f => "#ffc107", // Yellow
            >= 0.4f => "#fd7e14", // Orange
            _ => "#dc3545"         // Red
        };
    }

    private string GetStrokeDashArray(float score)
    {
        var circumference = 2 * Math.PI * 25; // radius = 25
        var dashLength = circumference * score;
        return $"{dashLength} {circumference}";
    }

